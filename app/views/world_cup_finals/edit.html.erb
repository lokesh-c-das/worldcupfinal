<h1> Update World Cup Final</h1>

<%= form_with model: world_cup_final, url:world_cup_final_path, method: :patch, local:true, scope: :world_cup_final  do |final|%>
    <div>
        <%= final.label :year %><br>
        <%= final.number_field :year %>
    </div>
    <div>
        <%= final.label :champion %><br>
        <%= final.text_field :champion %>
    </div>
    <div>
        <%= final.label :champion_score %><br>
        <%= final.number_field :champion_score %>
    </div>
    <div>
        <%= final.label :runnerup %><br>
        <%= final.text_field :runner_up %>
    </div>
    <div>
        <%= final.label :runnerup_score %><br>
        <%= final.number_field :runner_up_score %>
    </div>
    <%=final.submit "Update world cup"%>
<% end %>